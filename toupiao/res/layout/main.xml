<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ui_image_linearlayout"
        android:orientation="vertical"
        >
        <FrameLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            <ImageView 
                android:id="@+id/ui_image_gallery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            <TextView android:id="@+id/ui_titile_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="新闻内容"
                android:background="#00000000"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" 
                android:textColor="#ffffff"
                android:textSize="18dip"
                 />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/ui_content_linearlayout"
        android:orientation="vertical">
         <LinearLayout android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
             <ImageView 
                 android:id="@+id/ui_vote_imageview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                android:id="@+id/ui_vote_proble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="投票问题"
                />
          </LinearLayout>
          <TextView 
             
              android:id="@+id/ui_vote_content"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:text="你如何看航空公司的规则"/>
          <RelativeLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView android:id="@+id/ui_vote_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_gravity="left"
                  android:layout_marginLeft="5dip"
                  android:text="投票进行中"/>
               <TextView android:id="@+id/ui_vote_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:textSize="16sp"
                  android:layout_marginRight="5dip"
                  android:text="2012-5-9"/>
          </RelativeLayout>
           
      </LinearLayout>
      <Button
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ui_vote_button"
              android:layout_gravity="bottom"
              android:text="投票中"
           />
      <TextView android:layout_width="fill_parent"
          android:layout_height="30dip"/>
</LinearLayout>